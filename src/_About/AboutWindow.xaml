<Window 
    x:Class="Monito.AboutWindow" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Monito" 
    mc:Ignorable="d" 
    d:DesignHeight="300" 
    d:DesignWidth="300" 
    Width="300" 
    Height="150" 
    Title="About DynaMonito">
    <StackPanel 
        Name="aboutPanel" 
        Background="#2d2d2d" 
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch">
        <TextBlock 
            FontFamily="Arial" 
            Padding="10" 
            Foreground="LightGray" 
            TextAlignment="Center"
            FontSize="18" 
            Text="DynaMonito"/>
        <TextBlock 
            FontFamily="Arial" 
            Padding="10" 
            Foreground="LightGray" 
            TextAlignment="Center" >
                <Run 
                    Text="A collection of useful tools for Dynamo"/>
                <LineBreak/>
                <Run 
                    Text="© 2018 Bad Monkeys"/>
        </TextBlock>
        <TextBlock 
            FontFamily="Arial" 
            Padding="5" 
            TextAlignment="Center">          
            <Hyperlink 
                NavigateUri="http://www.badmonkeys.net" 
                RequestNavigate="Hyperlink_RequestNavigate">
                http://www.badmonkeys.net
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Window>