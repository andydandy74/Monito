<Window x:Class="Monito.PlaygroundWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        d:DesignHeight="500" 
        d:DesignWidth="500" 
        Width="500" 
        Height="500" 
        Title="DynaMonito - Playground">
    <ScrollViewer 
        VerticalScrollBarVisibility="Auto">
        <StackPanel 
            Name="PlaygroundPanel" 
            Background="#2d2d2d" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch">
            <TextBox
                Name="clickedGUID" 
                Text="{Binding ZoomGUID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                Visibility="Collapsed"/>
            <ItemsControl 
                ItemsSource="{Binding PackageList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Tag="{Binding Path=GUID}"
                            Height="25"
                            Margin="5"
                            Click="button_Click"
                            Background="#2d2d2d"
                            Foreground="LightGray"
                            HorizontalContentAlignment="Left"
                            Content="{Binding Path=Name}">
                            <Button.ToolTip>
                                <ToolTip 
                                    Content="{Binding Path=Details}" />
                            </Button.ToolTip>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Window>