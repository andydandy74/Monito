<Window x:Class="Monito.PlayerInputsWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        d:DesignHeight="500" 
        d:DesignWidth="500" 
        Width="500" 
        Height="500" 
        Title="DynaMonito - Manage Dynamo Player Inputs">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Monito;component/Shared.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <ScrollViewer 
        VerticalScrollBarVisibility="Auto">
        <StackPanel 
            Style="{StaticResource MonitoStackPanelMain}"
            Name="playerInputsPanel">
            <Button 
                Content="Reset all inputs" 
                Click="click_ResetAll"/>
            <Button 
                Content="Reset selected" 
                Click="click_ResetSelected"/>
            <Button 
                Content="Set selected as input" 
                Click="click_SetSelectedAsInput"/>
            <TextBox
                Name="InputAction"
                Visibility="Collapsed"
                Text="{Binding InputAction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock 
                TextAlignment="Left" 
                Text="All Dynamo Player inputs in current workspace:" 
                FontWeight="Bold"/>
            <ItemsControl 
                ItemsSource="{Binding CurrentInputs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Tag="{Binding Path=GUID}"
                            Style="{StaticResource MonitoButtonResults}"
                            Click="button_Click"
                            Content="{Binding Path=Name}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Window>