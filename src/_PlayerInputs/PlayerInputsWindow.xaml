<Window x:Class="Monito.PlayerInputsWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        d:DesignHeight="500" 
        d:DesignWidth="500" 
        Width="500" 
        Height="500" 
        Title="DynaMonito - Manage Dynamo Player Inputs">
    <ScrollViewer 
        VerticalScrollBarVisibility="Auto">
        <StackPanel 
            Name="playerInputsPanel" 
            Background="#2d2d2d" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch">
            <Button 
                Content="Reset all inputs" 
                Click="click_ResetAll"
                Margin="5"/>
            <Button 
                Content="Reset selected" 
                Click="click_ResetSelected"
                Margin="5"/>
            <Button 
                Content="Set selected as input" 
                Click="click_SetSelectedAsInput"
                Margin="5"/>
            <TextBox
                Name="InputAction"
                Visibility="Collapsed"
                Text="{Binding InputAction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox
                Name="clickedGUID" 
                Text="{Binding ZoomGUID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                Visibility="Collapsed"/>
            <TextBlock 
                FontFamily="Arial" 
                Padding="10" 
                Foreground="LightGray" 
                TextAlignment="Left" 
                Text="All Dynamo Player inputs in current workspace:" 
                FontWeight="Bold"/>
            <ItemsControl 
                ItemsSource="{Binding CurrentInputs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Tag="{Binding Path=GUID}"
                            Height="25"
                            Margin="5"
                            Click="button_Click"
                            Background="#2d2d2d"
                            Foreground="LightGray"
                            HorizontalContentAlignment="Left"
                            Content="{Binding Path=Name}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Window>